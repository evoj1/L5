<Window x:Class="L5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Студенты" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Students}"
                  SelectedItem="{Binding SelectedStudent}"
                  AutoGenerateColumns="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя"        Binding="{Binding Name}" />
                <DataGridTextColumn Header="Специальн." Binding="{Binding Specialty}" />
                <DataGridTextColumn Header="Группа"     Binding="{Binding Group}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Имя"/>
                <TextBox Width="150" Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Специальность"/>
                <TextBox Width="150" Text="{Binding NewSpecialty, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Группа"/>
                <TextBox Width="100" Text="{Binding NewGroup, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить"
                    Width="90" Margin="0,0,10,0"
                    Command="{Binding AddStudentCommand}"/>
            <Button Content="Удалить"
                    Width="90" Margin="0,0,10,0"
                    Command="{Binding RemoveStudentCommand}"/>
            <Button Content="Сохранить"
                    Width="90"
                    Command="{Binding SaveStudentCommand}"/>
        </StackPanel>
    </Grid>
</Window>
